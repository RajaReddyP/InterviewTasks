<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.polamrapps.interviewtasks.MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interview Tasks!" />


    <Button
        android:id="@+id/btnIsPalindrom"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/title"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/palindrom" />

    <Button
        android:id="@+id/btnLongestPalindrom"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/btnIsPalindrom"
        android:text="@string/longest_palindrom" />

    <Button
        android:id="@+id/btnPermutations"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btnLongestPalindrom"
        android:text="@string/permutations" />

    <Button
        android:id="@+id/btnAnagram"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/btnPermutations"
        android:text="@string/anagram" />

    <Button
        android:id="@+id/btnMinimumDrops"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btnAnagram"
        android:text="@string/minimum_drops" />

    <Button
        android:id="@+id/btn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btnMinimumDrops" />
</RelativeLayout>
